{% extends 'base.html.twig' %}

{% block title %}Padre de Familia{% endblock %}

{% block body %}
    <h1>Padre de Familia</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for padre_familium in padre_familias %}
            <tr>
                <td>{{ padre_familium.id }}</td>
                <td>{{ padre_familium.apellidoPaterno }}</td>
                <td>{{ padre_familium.apellidoMaterno }}</td>
                <td>{{ padre_familium.nombre }}</td>
                <td>{{ padre_familium.dni }}</td>
                <td>{{ padre_familium.celular }}</td>
                <td>{{ padre_familium.email }}</td>
                <td>{{ padre_familium.direccion }}</td>
                <td>
                    <a href="{{ path('app_padre_familia_show', {'id': padre_familium.id}) }}" class="btn btn-secondary">Mostrar</a>
                    <a href="{{ path('app_padre_familia_edit', {'id': padre_familium.id}) }}" class="btn btn-success">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_padre_familia_new') }}" class="btn btn-success">+ Registrar</a>
{% endblock %}
