{% extends 'base.html.twig' %}

{% block title %}Auxiliar {% endblock %}

{% block body %}
    <h1>Auxiliar </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for auxiliar in auxiliars %}
            <tr>
                <td>{{ auxiliar.id }}</td>
                <td>{{ auxiliar.apellidoPaterno }}</td>
                <td>{{ auxiliar.apellidoMaterno }}</td>
                <td>{{ auxiliar.nombre }}</td>
                <td>{{ auxiliar.email }}</td>
                <td>{{ auxiliar.celular }}</td>
                <td>{{ auxiliar.direccion }}</td>
                <td>
                    <a href="{{ path('app_auxiliar_show', {'id': auxiliar.id}) }}" class="btn btn-secondary">Mostrar</a>
                    <a href="{{ path('app_auxiliar_edit', {'id': auxiliar.id}) }}" class="btn btn-success">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auxiliar_new') }}" class="btn btn-success">+ Registrar Auxiliar</a>
{% endblock %}
